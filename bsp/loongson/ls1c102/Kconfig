mainmenu "RT-Thread Configuration"


config $BSP_DIR
    string
    option env="BSP_ROOT"
    default "."

config $RTT_DIR
    string
    option env="RTT_ROOT"
    default "../../.."
    
config $PKGS_DIR
    string
    option env="PKGS_ROOT"
    default "packages"

source "$RTT_DIR/Kconfig"
source "$PKGS_DIR/Kconfig"

config SOC_LS1C102
    bool
    select RT_USING_COMPONENTS_INIT
    select RT_USING_USER_MAIN
    default y

menu "SoC Peripheral Drivers"
    menuconfig BSP_USING_GBE
        bool "Enable RTL8211F"
        default n
        if BSP_USING_GBE
            menuconfig RT_USING_LWIP
                bool "LWIP"
                default y
        endif
endmenu
